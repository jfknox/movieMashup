<!DOCTYPE html>
<html>
<head>
  <title>MovieMashup</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar dark navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" <%= link_to "Home", root_path, {:style=>'color:#FFFFFF;', :class => "css_class"}%> </a> 
    </div>
<%= render 'layouts/new_s' %>
<%= render 'layouts/new_p' %>


    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><%= link_to "Stories", stories_path%> <p></li>
        <li><%= link_to "Posters", posters_path%> <p></li>

        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Create New <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            
            <li>
              <%= link_to "New Poster", "#poster_modal", "data-toggle" => "modal" %>
            </li> 
            
            <li>
               <%= link_to "New story", "#story_modal", "data-toggle" => "modal" %>
            </li>
            
           </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-right" role="search">
        <% if current_user %>
             <%= image_tag current_user.info["info"]["image"] %>

        <% end %>
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>

      </form>
      <ul class="nav navbar-nav navbar-right">
       

        <div id="user-widget" class="fb_widget">
          <% if current_user %>
              Welcome <strong><%= current_user.name %></strong>!
              <button class="login btn btn-primary fb_logout"><%= link_to "Sign Out", signout_path, {:style=>'color:#FFFFFF;', :class => "css_class"} %></button>
          <% else %>
              <button class="login btn btn-primary fb_login"><%= link_to "Sign in with Facebook", "/auth/facebook", {:style=>'color:#FFFFFF;', :class => "css_class"} %></button>
          <% end %>
        </div>
       

      </ul>
    </div>
    <!-- /.navbar-collapse -->
  </div>
  <!-- /.container-fluid -->

</nav>




<%= yield %>

</body>
</html>
