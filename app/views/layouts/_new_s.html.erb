<div class="modal fade" id="story_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel">New Story</h4>
      </div>
      <div class="modal-body">
        <div class="modal_posters">
          <div class="rand_poster_div">
            <%= image_tag(@poster1['posters']['original'], class: "rand_poster") %><br/>
            <%= @poster1['title'] %>
          </div>
          <div class="rand_poster_div">
            <%= image_tag(@poster2['posters']['original'], class: "rand_poster") %><br/>
            <%= @poster2['title'] %>
          </div>
        </div>
        <%= form_for current_user.stories.new do |f| %>
          <div class="new_field"><%= f.label :title1 %>: </div>
          <div class="new_input"><%= f.text_field :title1 %><br/>  </div>
          <div class="new_field"><%= f.label :title2 %>: </div>
          <div class="new_input"><%= f.text_field :title2 %><br/>  </div>
          <div class="new_field"><%= f.label :mash_title %>: </div>
          <div class="new_input"><%= f.text_field :mash_title %><br/>  </div>
          <div class="new_field"><%= f.label :content %>: </div>
          <div class="new_input"><%= f.text_area :content,  :size => "75x10"  %><br/>  </div>
          <br/>
          <div id="sub_input"> <%= f.submit %></div> <br/>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>    
      </div>
    </div>
  </div>
</div>