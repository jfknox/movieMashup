<hr>
<h3>Comments</h3>
<hr>
<div class="comments_div">
    <table>
      <tbody>
        <% @comments.each do |comment| %>
          <tr class="comment_row">
            <td class="comments_pic"><%= image_tag(comment.user_name, class: "com_pic") %></td>
            <td class="comments_table"><%= comment.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
<hr>
<div class="new_comment">
  <%= form_for [@commentable, @comment] do |f| %>
   <% if current_user.present? %>

    <strong>Leave Your Comment</strong>
   
    <div class="field">
      <%= f.text_area :content, rows: 8, cols: 50 %>
    </div>
    <%= f.hidden_field :user_name, :value => current_user.info["info"]["image"] %>
    <div class="actions">
      <%= f.submit "Submit Comment" %>
    </div>
  <% else %>
    <p> Sign in to leave comments </p>
  <% end %>
</div>
<% end %>


