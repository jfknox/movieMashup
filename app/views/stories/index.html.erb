<h1>Listing stories</h1>

<div>
  <%= form_tag stories_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
    <p class="search">
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :mash_title => nil %>
    </p> 
  <% end %> 
  <br/>
</div>

<table>
  <thead>
    <tr>
      <th><%= sortable "user_id", "Submited By" %></th>
      <th><%= sortable "title1" %></th>
      <th><%= sortable "title2" %></th>
      <th><%= sortable "mash_title" %></th>
      <th><%= sortable "content" %></th>
      <th><%= sortable "created_at", "Time Created" %></th>
      <th colspan="3"></th>
    </tr>
  </thead> 

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.user_id %></td>
        <td><%= story.title1 %></td>
        <td><%= story.title2 %></td>
        <td><%= story.mash_title %></td>
        <td><%= story.content %></td>
        <td><%= story.created_at %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
