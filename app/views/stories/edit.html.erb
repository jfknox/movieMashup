
<h1>Editing story</h1> 

<%= form_for(@story) do |f| %>


  <div class="field">
    <%= f.label :title1 %><br>
    <%= f.text_field :title1 %>
  </div>
  <div class="field">
    <%= f.label :title2 %><br>
    <%= f.text_field :title2 %>
  </div>
  <div class="field">
    <%= f.label :mash_title %><br>
    <%= f.text_field :mash_title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :size => "100x15"  %>
  </div>
 
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Show', @story %> |
<%= link_to 'Back', stories_path %>
