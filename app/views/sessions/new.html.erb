<!doctype html>
<!--[if lte IE 9]><html class="ie" lang="en"><script src="js/html5shiv.js"></script><![endif]-->
<!--[if gt IE 9]><!--><html lang="en"><!--<![endif]-->
<head>
<title>Flip Carousel</title>
<script src="jquery-1.8.1.min.js"></script>
<script src="html5shiv.js"></script>
<script src="flip-carousel.js"></script>
<link href="foundation-icons.css" rel="stylesheet">
<link href="flip-carousel.css" rel="stylesheet">
</head>

<body>
  <div class="modal fade" id="openingModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button><br/>
        </div>
        <div class="modal-body">
          <%= link_to image_tag("MashUp_logo.png", class: "logo"), root_path %>
          <h1 class="logo-text">MOVIE-MASH</h1>
          <h3>Where you can create movie mash-ups and share them with the world!</h3>
        </div>
      </div>
    </div>
  </div>
  <h1 class="landing_title">Mash-Up Posters</h1>
  <article title="item1"><span><%= image_tag(@posters[0].image_url) %></span></article>
  <article title="item2"><span><%= image_tag(@posters[1].image_url) %></span></article>
  <article title="item3"><span><%= image_tag(@posters[2].image_url) %></span></article>
  <article title="item4"><span><%= image_tag(@posters[3].image_url) %></span></article>
  <article title="item5"><span><%= image_tag(@posters[4].image_url) %></span></article>
  <article title="item6"><span><%= image_tag(@posters[5].image_url) %></span></article>
  <article title="item7"><span><%= image_tag(@posters[6].image_url) %></span></article>
  <article title="item8"><span><%= image_tag(@posters[7].image_url) %></span></article>
  <article title="item9"><span><%= image_tag(@posters[8].image_url) %></span></article>
  <article title="item10"><span><%= image_tag(@posters[9].image_url) %></span></article>

<script>
  $('article').flipcarousel({
    pagination : false,
    loader : true,
    itemsperpage: 4,
    randomizer: 0.7
  });
</script>

  <hr/ class="landing_divider">
  <h1 class="landing_title">Mash-Up Stories</h1>
  <div class="landing_stories">
    <div class="landing_story">
      <div class="story_title"><%= @stories[0].mash_title %></div>
      <hr/ class="landing_divider">
      <div class="story_content"><%= @stories[0].content %></div>
    </div>
    <div class="landing_story">
      <div class="story_title"><%= @stories[1].mash_title %></div>
      <hr/ class="landing_divider">
      <div class="story_content"><%= @stories[1].content %></div>
    </div>
    <div class="landing_story">
      <div class="story_title"><%= @stories[2].mash_title %></div>
      <hr/ class="landing_divider">
      <div class="story_content"><%= @stories[2].content %></div>
    </div>
  </div>
    
</body>
</html> 
