<section id="poster_wrapper"> 
    <% @posters.each do |poster| %>
    <div class="poster">
      <%= link_to image_tag(poster.image_url,class: "p_index_img"), poster %>
      <%= link_to 'Edit', edit_poster_path(poster), class: "links" %>
      <td><%= link_to 'Destroy', poster, method: :delete, data: { confirm: 'Are you sure you want to delete your work?' } %></td>
      <div class="poster">
        <%= pluralize poster.reputation_for(:votes).to_i, "vote" %>
      </div>
    </div>
    <% end %>
</section>

<table>
  <thead>
    <tr>
     
      <th> Total </th>
      <th> Title 1 </th>
      <th> Title 2 </th>
      <th> Mash Title </th>
      <th> Content </th>
      <th> Created </th>
      
      <th colspan="3"></th>
    </tr>
  </thead> 

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= pluralize story.reputation_for(:votes).to_i.inspect, "vote" %></td>
        <td><%= story.title1 %></td>
        <td><%= story.title2 %></td>
        <td><%= story.mash_title %></td>
        <td><%= story.content %></td>
        <td><%= story.created_at %></td>
        <td><%= link_to 'Show', story %></td>
        <td><%= link_to 'Edit', edit_story_path(story) %></td>
        <td><%= link_to 'Destroy', story, method: :delete, data: { confirm: 'Are you sure you want to delete your work?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
